<style>
    .deliver-section {
      background-color:{{ section.settings.bg_color }};  
    }
</style>
<div class="{% if section.settings.custom_width %}custom-page-width {% endif %}deliver-seciton" style="background-color:{{ section.settings.bg_color }}">
    {% for block in section.blocks %}
        <div class="item">
            <img src="{{ block.settings.deliver_icon | img_url: medium }}" alt="image">
            <p> {{ block.settings.deliver_text }}</p>
        </div>
    {% endfor %}
</div>
{% schema %}
    {
        "name": "deliver info",
        "settings": [
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background-color",
                "default": "#004289"
            },
            {
                "type": "checkbox",
                "id": "custom_width",
                "label": "Custom width",
                "default": true
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "image-text",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "deliver_icon",
                        "label": "Icon"
                    },
                    {
                        "type": "text",
                        "id": "deliver_text",
                        "label": "Text"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "deliver info"

            }
        ]
        
    }
{% endschema %}







